<Window x:Name="window" x:Class="SearchMate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SearchMate" Height="800" Width="500" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FFF4F4F4">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Top">

            <TextBlock Text="🔍 SearchMate"
                       FontSize="36"
                       Foreground="#333"
                       Margin="0 0 0 20" RenderTransformOrigin="0.5,0.5" FontWeight="Bold">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="0"/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>

            <Grid Margin="0 0 0 5">
                <TextBox Name="SearchBox"
                         FontSize="16"
                         Padding="10"
                         Background="White"
                         BorderBrush="#CCC"
                         BorderThickness="1"
                         TextChanged="SearchBox_TextChanged"/>
                <TextBlock Name="PlaceholderText"
                           Text="Enter filename..."
                           FontSize="16"
                           Padding="15,11,10,10"
                           Foreground="DarkGray"
                           IsHitTestVisible="False"/>
            </Grid>

            <ListBox Name="ResultsList"
                     FontSize="14"
                     BorderBrush="#CCC"
                     BorderThickness="1"
                     Background="White"
                     MouseDoubleClick="ResultsList_MouseDoubleClick"
                     Height="630"/>
        </StackPanel>
    </Grid>
</Window>
